<aside id="aside-cover" class="cover">

  <div class="cover container">
    <div class="profile">
      {{#if @blog.logo}}
      <a id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <img id="aside-cover-logo" src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="profile avatar hvr-buzz-out bounceInDown" />
        <h1 id="aside-cover-title" class="bounceInDown">{{@blog.title}}</h1>
        <h3 id="profile-resume">{{@blog.description}}</h3>
      </a>
      {{/if}}

      <hr class="divider long" />
      <p id="aside-cover-description" class="bounceInLeft">{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          <div id="aside-cover-navigation" class="bounceInRight">{{navigation}}</div>
          <div id="aside-cover-social" class="bounceInUp">{{> social}}</div>
          {{> search }}
        </div>
      </div>
    </div>
  </div>
</aside>